@model LaboratorioN2.Models.ViewModels.PersonaViewModel
@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="~/css/estilo.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" ">
<title>Registro</title>

<div class="contenedor">
    @using (Html.BeginForm("Save", "Home"))
    {
        <div class="form__header">
            <div class="form__ico__cont">
                <i class="animate__animated animate__backInDown fas fa-save form__ico "></i>
                <!--<i class="fas fa-user form__ico"></i>-->
            </div>
        </div>

        @Html.LabelFor(m => m.NombrePersona, new { @class = "form__label" })
        @Html.ValidationMessageFor(m => m.NombrePersona)
        @Html.TextBoxFor(m => m.NombrePersona, new { @class = "form__input", @placeholder = "Escriba su nombre" })


        @Html.LabelFor(m => m.EdadPersona, new { @class = "form__label" })
        @Html.ValidationMessageFor(m => m.EdadPersona)
        @Html.TextBoxFor(m => m.EdadPersona, new { Type = "number", @class = "form__input", @placeholder = "Escriba su edad" })


        @Html.LabelFor(m => m.DescripcionPersona, new { @class = "form__label" })
        @Html.ValidationMessageFor(m => m.DescripcionPersona)
        @Html.TextBoxFor(m => m.DescripcionPersona, new { @class = "form__input", @placeholder = "Escriba su descripcion" })

        <input type="submit" class="btn btn-outline-secondary form__button" value="Save">
    }
</div>